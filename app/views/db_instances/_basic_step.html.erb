<div class="detailSection row-fluid">
  <span>To get started, please fill out the below fields and click <strong>Continue</strong></span>
  <div class=" form-horizontal firstForm">

    <div class="control-group">
      <label class="control-label">DB Instance Class:</label>
      <div class="controls">
        <select>
          <option></option>
        </select>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Region Deployment:</label>
      <div class="controls">
        <% DeploymentRegion.all.each do |region| %>
          <label class="checkbox inline">
            <%= check_box_tag "db_instance[deployment_region_ids][]", region.id %>
            <%= region.name %>
          </label>
        <% end %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">No. of CPUs:</label>
      <div class="controls" id="cpu" >
        <%= select_tag "cpu", options_for_select([1,2,4,8,16]), :id => "instance-cpu", :style => "display: none;" %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Amount of RAM:</label>
      <div class="controls" id=ram>
        <%= select_tag "ram", options_for_select([512,1,2,4,8]), :id => "instance-ram", :style => "display: none;" %>
      </div>
    </div>
  </div>
</div>


<div class="detailSection row-fluid">
  <span><strong>Provide the details for your RDS Database Instance</strong></span>
  <div class="form-horizontal secForm">

    <div class="control-group">
      <label class="control-label">Allocated Storage:*</label>
      <div class="controls">
        <div class="input-prepend input-append">
          <span class="add-on">GB</span>
          <%= f.text_field :allocated_storage, :id => "appendedPrependedInput", :class => "span2" %>
          <small>(Minimum: 5GB, Maximum: 3072 GB) Higher allocated storage may improve IOPS performance</small>
        </div>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Use Provisioned IOPS:</label>
      <div class="controls">
        <label class="checkbox ">
          <%= f.check_box :provision_iops %>
        </label>
      </div>
    </div>


    <div class="control-group">
      <label class="control-label">DB Instance Identifier:*</label>
      <div class="controls">
        <%= f.text_field :identifier %>
        <!--<small>(e.g. mydbinstance)</small>-->
      </div>
    </div>


    <div class="control-group">
      <label class="control-label">Master Username:*</label>
      <div class="controls">
        <%= f.text_field :master_username %>
        <!--<small>(e.g. awsuser)</small>-->
      </div>
    </div>


    <div class="control-group">
      <label class="control-label">Master Password:*</label>
      <div class="controls">
        <%= f.password_field :master_password %>
        <!--<small>(e.g. mypassword)</small>-->
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Database Name:</label>
      <div class="controls">
        <input type="text" name="some_name" value="" id="some_name">
        <%#= f.text_field  :id => "db_name" %>
        <small>Note: if no database name is specified then no initial MYSQL database will be created on the DB
          Instance.
        </small>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Database Port:</label>
      <div class="controls">
        <select>
          <option>3306</option>
          <option></option>
          <option></option>
        </select>
      </div>
    </div>

  </div>
</div>